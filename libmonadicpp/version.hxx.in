#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBMONADICPP_VERSION       $libmonadicpp.version.project_number$ULL
#define LIBMONADICPP_VERSION_STR   "$libmonadicpp.version.project$"
#define LIBMONADICPP_VERSION_ID    "$libmonadicpp.version.project_id$"
#define LIBMONADICPP_VERSION_FULL  "$libmonadicpp.version$"

#define LIBMONADICPP_VERSION_MAJOR $libmonadicpp.version.major$
#define LIBMONADICPP_VERSION_MINOR $libmonadicpp.version.minor$
#define LIBMONADICPP_VERSION_PATCH $libmonadicpp.version.patch$

#define LIBMONADICPP_PRE_RELEASE   $libmonadicpp.version.pre_release$

#define LIBMONADICPP_SNAPSHOT_SN   $libmonadicpp.version.snapshot_sn$ULL
#define LIBMONADICPP_SNAPSHOT_ID   "$libmonadicpp.version.snapshot_id$"
